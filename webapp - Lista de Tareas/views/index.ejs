    <!--Ejemplo de editar Registro-->
    <form action="/agregar-tarea" method="post">
        <p>
            <label for="descripcion">Nueva tarea:</label>
            <input type="text" class="form-control" name="descripcion">
            <br>
            <button type="submit" class="btn btn-primary">Agregar</button>
        </p>
    </form>

    <hr>

    <ul>
        <% for(let i=0; i<tareas.length; i++) { %>
        <li>
          <a href="/actualizar-formulario?id=<%=tareas[i].id%>"><%=tareas[i].descripcion%></a>
          [<a href="/eliminar-tarea?id=<%=tareas[i].id%>" onclick="return confirm('Â¿EstÃ¡ seguro de eliminar esta tarea?')">x</a>]
    
          <br/>
          Recursos:
          <ol>
            <% for(let j=0; j<tareas[i].recursos.length; j++) { %>
              <li><%=tareas[i].recursos[j]%></li>
            <% } %>
          </ol>
        </li>
        <% } %>
      </ul>

